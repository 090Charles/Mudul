@model MudulProject.Models.Secciones

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Secciones</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">Aula:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Id_Aulas, new SelectList(ViewBag.ListaAulas, "Id", "Description",Model.Id_Aulas))
                @Html.ValidationMessageFor(model => model.Id_Aulas)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Asignatura:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Id_Asignaturas, new SelectList(ViewBag.ListaAsignaturas, "Id", "Description",Model.Id_Asignaturas))
                @Html.ValidationMessageFor(model => model.Id_Asignaturas)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Periodo:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Id_Periodo, new SelectList(ViewBag.ListaPeriodo, "Id", "FullPeriodoAnio", Model.Id_Periodo))
                @Html.ValidationMessageFor(model => model.Id_Periodo)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Horario:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Id_Horarios, new SelectList(ViewBag.ListaHorarios, "Id", "HoraFormateada", Model.Id_Horarios))
                @Html.ValidationMessageFor(model => model.Id_Horarios)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
